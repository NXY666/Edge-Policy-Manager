<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="PolicyManager.Pages.Policy.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    DataContext="{x:Bind _dataContext}">

    <Grid Margin="5 5 5 15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="15" Orientation="Horizontal">
            <Button Width="45" Height="45">
                <FontIcon Glyph="&#xE713;" />
            </Button>
            <TextBlock Text="设置" FontSize="20" VerticalAlignment="Center" Margin="10,0" />
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="10">
            <controls:SettingsCard HorizontalAlignment="Stretch" Margin="5" Header="语言">
                <controls:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xF2B7;"/>
                </controls:SettingsCard.HeaderIcon>
                <StackPanel>
                    <ComboBox
                        x:Name="LanguageComboBox"
                        Width="200"
                        ItemsSource="{x:Bind _dataContext.LanguageList}" 
                        SelectionChanged="LanguageComboBox_OnSelectionChanged"/>
                </StackPanel>
            </controls:SettingsCard>
        </StackPanel>
    </Grid>
</Page>
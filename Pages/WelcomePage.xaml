<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="PolicyManager.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Uid="WelcomePage/TitleTextBlock" FontSize="24" Margin="0,0,0,40" HorizontalAlignment="Center" />

            <Grid ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button IsEnabled="True" Click="EdgeButton_Click" Width="150">
                    <Button.Content>
                        <Grid Padding="0, 20" RowSpacing="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <ImageIcon Source="/Assets/msedge.ico" Width="40" Height="40" />
                            <TextBlock Grid.Row="1" Text="Edge" FontSize="16" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Button.Content>
                </Button>
                <Button Grid.Column="1" IsEnabled="True" Click="EdgeUpdateButton_Click" Width="150">
                    <Button.Content>
                        <Grid Padding="0, 20" RowSpacing="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <ImageIcon Source="/Assets/msedgeupdate.ico" Width="40" Height="40" />
                            <TextBlock Grid.Row="1" Text="Edge Update" FontSize="16" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Button.Content>
                </Button>
                <Button Grid.Column="2" IsEnabled="True" Click="EdgeWebviewButton_Click" Width="150">
                    <Button.Content>
                        <Grid Padding="0, 20" RowSpacing="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <ImageIcon Source="/Assets/msedgewebview2.ico" Width="40" Height="40" />
                            <TextBlock Grid.Row="1" Text="Edge Webview 2" FontSize="16" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Grid>
                    </Button.Content>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Page>